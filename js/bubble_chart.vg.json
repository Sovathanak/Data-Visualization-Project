{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 400,
    "title": "",
    "data": {
    "url":
   "https://raw.githubusercontent.com/Sovathanak/Data-Visualization-Project/master/data/birth_country_clean_1.csv"
    },
    "params": [
    {
    "name": "Year_filter",
    "value": 1950,
    "bind": {
    "input": "range",
    "min": 1950,
    "max": 2019,
    "step": 1,
    "name": "Year: "
    }
    },
   
    {
    "name": "Population_Above",
    "value": 0,
    "bind": {
    "input": "range",
    "min": 0,
    "max": 100000000,
    "step": 1000000,
    "name": "Minimum Population: "
    }
    },
    {
    "name": "Continent_selection",
    "bind": {
    "input": "select",
    "options": [
    null,
    "Africa",
    "Asia",
    "Europe",
    "North America",
    "Oceania",
    "South America"
    ],
    "labels":[
    "Show All",
    "Africa",
    "Asia",
    "Europe",
    "North America",
    "Oceania",
    "South America"
    ],
    "name": "Continent Selection: "
    }
    }
   
    ],
    "transform": [
    {"filter": "datum.Birth > 0"},
    {"filter": "datum.Death > 0"},
    {"filter": "datum.Population > Population_Above"},
    {"filter": "Continent_selection == null || datum.Continent ==Continent_selection"},
    {"filter": "datum.Year == Year_filter"},
    {"calculate": "datum.Birth/datum.Population * 10000", 
     "as": "Child Birth per 10,000"},
    {"calculate": "datum.Death/datum.Population * 10000", 
     "as": "Child Mortality per 10,000"}
    ],
    "encoding": {
    "x": {
    "field": "Child Birth per 10,000",
    "type": "quantitative",
    "title": "Child Birth per 10,000",
    "axis": {"tickCount": 3, "grid": false},
    "scale": {"type": "log", "domain": [1, 1000]}
    },
    "y": {
    "field": "Child Mortality per 10,000",
    "type": "quantitative",
    "axis": {"tickCount": 3, "grid": false},
     "title": "Child Mortality per 10,000",
    "scale": {"type": "log", "domain": [1, 1000]}
    }
    },
    "layer": [
    {
    "selection": {
    "continent_highlight": {
    "type": "multi",
    "fields": ["Continent"],
    "bind": "legend"
    }
    },
    "mark": "circle",
    "encoding": {
    "size": {
    "field": "Population",
    "type": "quantitative",
    "scale": {
    "type": "threshold",
    "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
    "range": [10, 50, 150, 200, 300, 400]
    }
},
    "color": {
    "field": "Continent",
    "type": "nominal",
    "title": "Continents (Click to filter)",
    "scale": {
    "domain": [
    "Africa",
    "Asia",
    "Europe",
    "North America",
    "Oceania",
    "South America"
    ],
   "range": [
       "#F1C40F",
       "#95A5A6",
       "#1E88E5",
       "#6BCCC8",
       "#756bb1",
       "#fbb4b9"
   ]
    }
    },
    "opacity": {
    "condition": {"selection": "continent_highlight", "value": 0.7},
    "value": 0.1
    },
    "tooltip": [
    {"field": "Entity", "type": "nominal", "title": "Country"},
    {"field": "Child Birth per 10,000", "type": "quantitative", "format": ","},
    {"field": "Child Mortality per 10,000", "type": "quantitative", "format": ","},
    {"field": "Population", "type": "quantitative", "format": ","}
    ]
    }
    },
    {
    "mark": {
    "type": "text",
    "align": "right",
    "baseline": "middle",
    "dx": -10,
    "fontSize": 12,
    "fontStyle": "italic"
    },
    "encoding": {
    "text": {"field": "Entity", "type": "nominal"},
    "color": {"value": "black"},
    "opacity": {
    "condition": {
    "test": "datum.Entity == 'China' || datum.Entity =='India' || datum.Entity == 'Australia' || datum.Entity == 'United Kingdom'|| datum.Entity == 'Nigeria' || datum.Entity == 'United States of America'",
    "value": 1
    },
    "value": 0
    },
    "tooltip": [
    {"field": "Entity", "type": "nominal", "title": "Country"},
    {"field": "Child Birth per 10,000", "type": "quantitative", "format": ","},
    {"field": "Child Mortality per 10,000", "type": "quantitative", "format": ","},
    {"field": "Population", "type": "quantitative", "format": ","} ]
    }
    }
    ]
   }